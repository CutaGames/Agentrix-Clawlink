{
  "name": "@paymind/sdk",
  "version": "2.2.0",
  "description": "PayMind SDK for JavaScript/TypeScript - Unified payment layer for AI Agents, merchants, and applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && npm run build:esm",
    "build:esm": "tsc --module esnext --outDir dist/esm && mv dist/esm dist/index.esm.js",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "verify:api": "ts-node scripts/verify-api.ts",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build && npm run test:unit",
    "docs:generate": "typedoc",
    "docs:serve": "npx serve docs -p 3002"
  },
  "keywords": [
    "paymind",
    "payment",
    "sdk",
    "ai-agent",
    "crypto",
    "fiat",
    "x402"
  ],
  "author": "PayMind Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/paymind/sdk-js.git"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.28.14",
    "typescript": "^5.2.0"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  }
}
