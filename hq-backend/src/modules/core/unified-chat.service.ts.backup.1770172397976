import { Injectable, Logger } from '@nestjs/common';
import { InjectRepository } from '@nestjs/typeorm';
import { Repository } from 'typeorm';
import { HqAIService } from '../ai/hq-ai.service';
import { PromptBuilderService } from './prompt-builder.service';
import { ChatSession, ChatMessage, ToolCall } from '../../entities/chat-session.entity';

/**
 * ç»Ÿä¸€èŠå¤©æœåŠ¡
 * è§£å†³é—®é¢˜1: å¯¹è¯å…¥å£åˆ†æ•£
 * è§£å†³é—®é¢˜2: èŠå¤©è®°å½•å­˜å‚¨æ··ä¹±
 * è§£å†³é—®é¢˜6: ç®€åŒ– API è°ƒç”¨
 */

export interface UnifiedChatRequest {
  agentCode: string;
  message: string;
  sessionId?: string;
  workingDir?: string;
  userId?: string;
  context?: {
    currentFile?: string;
    selectedCode?: string;
    recentFiles?: string[];
    topic?: string;
  };
  mode?: 'workspace' | 'staff' | 'general';
}

export interface UnifiedChatResponse {
  sessionId: string;
  agentCode: string;
  response: string;
  toolCalls?: ToolCall[];
  model?: string;
  timestamp: Date;
}

@Injectable()
export class UnifiedChatService {
  private readonly logger = new Logger(UnifiedChatService.name);
  private readonly defaultWorkingDir = '/mnt/d/wsl/Ubuntu-24.04/Code/Agentrix/Agentrix-website';

  constructor(
    private readonly aiService: HqAIService,
    private readonly promptBuilder: PromptBuilderService,
    @InjectRepository(ChatSession)
    private readonly sessionRepo: Repository<ChatSession>,
  ) {}

  /**
   * ç»Ÿä¸€çš„èŠå¤©æ¥å£ - æ‰€æœ‰å¯¹è¯å…¥å£éƒ½åº”è¯¥è°ƒç”¨è¿™ä¸ªæ–¹æ³•
   */
  async chat(request: UnifiedChatRequest): Promise<UnifiedChatResponse> {
    const { 
      agentCode, 
      message, 
      sessionId, 
      workingDir = this.defaultWorkingDir,
      userId,
      context,
      mode = 'general',
    } = request;

    this.logger.log(`ğŸ“¨ UnifiedChat: agent=${agentCode}, mode=${mode}, session=${sessionId || 'new'}`);

    // 1. è·å–æˆ–åˆ›å»ºä¼šè¯
    let session = sessionId 
      ? await this.sessionRepo.findOne({ where: { id: sessionId } })
      : null;

    if (!session) {
      session = await this.createSession(agentCode, userId, mode, workingDir);
      this.logger.log(`ğŸ“ Created new session: ${session.id}`);
    }

    // 2. æ„å»ºç³»ç»Ÿæç¤ºè¯
    const systemPrompt = this.buildPromptForMode(mode, {
      agentCode,
      workingDir,
      context,
    });

    // 3. æ·»åŠ ç”¨æˆ·æ¶ˆæ¯åˆ°å†å²
    const userMessage: ChatMessage = {
      role: 'user',
      content: message,
      timestamp: new Date(),
    };
    session.messages.push(userMessage);

    // 4. æ„å»º AI è¯·æ±‚æ¶ˆæ¯
    const conversationMessages = [
      { role: 'system' as const, content: systemPrompt },
      ...session.messages.slice(-20).map(m => ({ // ä¿ç•™æœ€è¿‘ 20 æ¡
        role: m.role as 'user' | 'assistant',
        content: m.content,
      })),
    ];

    // 5. è°ƒç”¨ AI
    const aiResult = await this.aiService.chatForAgent(
      agentCode,
      conversationMessages,
      { systemPrompt, maxTokens: 16384 },
    );

    // 6. ä¿å­˜ AI å“åº”
    const assistantMessage: ChatMessage = {
      role: 'assistant',
      content: aiResult.content,
      timestamp: new Date(),
    };
    session.messages.push(assistantMessage);
    session.lastMessageAt = new Date();
    session.context = context;

    await this.sessionRepo.save(session);

    this.logger.log(`âœ… UnifiedChat complete: session=${session.id}, model=${aiResult.model}`);

    return {
      sessionId: session.id,
      agentCode,
      response: aiResult.content,
      model: aiResult.model,
      timestamp: new Date(),
    };
  }

  /**
   * è·å– Agent çš„å†å²ä¼šè¯
   */
  async getAgentSessions(agentCode: string, userId?: string, limit = 10): Promise<ChatSession[]> {
    const where: any = { agentCode, isActive: true };
    if (userId) where.userId = userId;

    return this.sessionRepo.find({
      where,
      order: { lastMessageAt: 'DESC' },
      take: limit,
    });
  }

  /**
   * è·å–ä¼šè¯è¯¦æƒ…
   */
  async getSession(sessionId: string): Promise<ChatSession | null> {
    return this.sessionRepo.findOne({ where: { id: sessionId } });
  }

  /**
   * è·å–æˆ–åˆ›å»º Agent çš„æ´»è·ƒä¼šè¯
   */
  async getOrCreateActiveSession(
    agentCode: string, 
    userId?: string, 
    mode: 'workspace' | 'staff' | 'general' = 'general',
    workingDir?: string,
  ): Promise<ChatSession> {
    // æŸ¥æ‰¾æœ€è¿‘çš„æ´»è·ƒä¼šè¯
    const existing = await this.sessionRepo.findOne({
      where: { agentCode, userId: userId || '', mode, isActive: true },
      order: { lastMessageAt: 'DESC' },
    });

    if (existing) return existing;

    return this.createSession(agentCode, userId, mode, workingDir);
  }

  /**
   * åˆ›å»ºæ–°ä¼šè¯
   */
  private async createSession(
    agentCode: string,
    userId?: string,
    mode: 'workspace' | 'staff' | 'general' = 'general',
    workingDir?: string,
  ): Promise<ChatSession> {
    const session = this.sessionRepo.create({
      agentCode,
      userId: userId || '',
      mode,
      workingDir: workingDir || this.defaultWorkingDir,
      messages: [],
      isActive: true,
    });
    return this.sessionRepo.save(session);
  }

  /**
   * æ ¹æ®æ¨¡å¼æ„å»ºç³»ç»Ÿæç¤ºè¯
   */
  private buildPromptForMode(
    mode: 'workspace' | 'staff' | 'general',
    options: {
      agentCode: string;
      workingDir: string;
      context?: any;
    },
  ): string {
    const { agentCode, workingDir, context } = options;

    switch (mode) {
      case 'workspace':
        return this.promptBuilder.buildWorkspacePrompt({
          agentCode,
          workingDir,
          currentFile: context?.currentFile,
          selectedCode: context?.selectedCode,
          recentFiles: context?.recentFiles,
        });

      case 'staff':
        return this.promptBuilder.buildStaffPrompt({
          agentCode,
          workingDir,
          topic: context?.topic,
        });

      default:
        return this.promptBuilder.buildSystemPrompt({
          agentCode,
          workingDir,
          enableTools: true,
        });
    }
  }

  /**
   * æ¸…é™¤ä¼šè¯å†å²
   */
  async clearSession(sessionId: string): Promise<void> {
    await this.sessionRepo.update(sessionId, { messages: [], isActive: false });
  }

  /**
   * åˆ é™¤ä¼šè¯
   */
  async deleteSession(sessionId: string): Promise<void> {
    await this.sessionRepo.delete(sessionId);
  }
}
