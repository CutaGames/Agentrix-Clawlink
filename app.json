{
  "expo": {
    "name": "ClawLink",
    "slug": "clawlink",
    "scheme": "clawlink",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0B1220"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.clawlink.mobile",
      "infoPlist": {
        "LSApplicationQueriesSchemes": [
          "metamask",
          "okx",
          "trust",
          "rainbow",
          "twitter",
          "twitterauth",
          "discord",
          "tg",
          "telegram"
        ],
        "NSCameraUsageDescription": "ClawLink uses the camera to scan QR codes for binding your OpenClaw instance.",
        "NSMicrophoneUsageDescription": "ClawLink uses the microphone for voice commands to your AI agent.",
        "NSPhotoLibraryAddUsageDescription": "ClawLink saves share cards to your photo library.",
        "NSPhotoLibraryUsageDescription": "ClawLink reads the photo library to select images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0B1220"
      },
      "package": "app.clawlink.mobile",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "RECORD_AUDIO"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [{ "scheme": "clawlink" }, { "scheme": "https", "host": "clawlink.app" }],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "newArchEnabled": false,
            "ndkVersion": "27.0.12077973"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#0B1220",
          "sounds": []
        }
      ],
      "expo-image-picker",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Agentrix to access your location for AI context."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "96a641e0-ce03-45ff-9de7-2cd89c488236"
      }
    }
  }
}
