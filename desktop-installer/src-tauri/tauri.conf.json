{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Agentrix",
  "version": "0.1.0",
  "identifier": "app.agentrix.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Agentrix â€” Local Agent Setup",
        "width": 480,
        "height": 680,
        "resizable": false,
        "centered": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "perMachine",
        "languages": ["English", "SimpChinese"],
        "displayLanguageSelector": false
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "macOS": {
      "dmg": {
        "background": null,
        "windowSize": { "width": 540, "height": 380 }
      },
      "minimumSystemVersion": "12.0"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  },
  "plugins": {
    "shell": {
      "all": false,
      "open": true
    },
    "notification": {
      "all": true
    }
  }
}
