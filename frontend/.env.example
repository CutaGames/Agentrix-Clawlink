# ===========================================
# Agentrix Frontend - 环境变量配置模板
# ===========================================
# 复制此文件为 .env.local 并填入实际值

# -------------------------------------------
# API 配置
# -------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -------------------------------------------
# 支付配置
# -------------------------------------------
# Stripe 公钥（前端可见）
# 获取密钥: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Stripe 元素外观配置
NEXT_PUBLIC_STRIPE_APPEARANCE_THEME=stripe
NEXT_PUBLIC_STRIPE_LOCALE=auto

# -------------------------------------------
# 区块链配置
# -------------------------------------------
NEXT_PUBLIC_CHAIN_ID=11155111
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=

# 合约地址
NEXT_PUBLIC_ESCROW_CONTRACT_ADDRESS=
NEXT_PUBLIC_X402_RELAYER_ADDRESS=

# -------------------------------------------
# 功能开关
# -------------------------------------------
NEXT_PUBLIC_ENABLE_TESTNET=true
NEXT_PUBLIC_ENABLE_MPC_WALLET=true
NEXT_PUBLIC_ENABLE_AGENT=true

# -------------------------------------------
# 第三方服务
# -------------------------------------------
NEXT_PUBLIC_TRANSAK_API_KEY=
NEXT_PUBLIC_MOONPAY_API_KEY=

# -------------------------------------------
# 分析和监控 (可选)
# -------------------------------------------
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_SENTRY_DSN=
